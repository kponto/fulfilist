=form_for [current_user, @item] do |f|

  -array = @item.fetch_info(@item.url)
  -if array[2] == nil
    Sorry, could not find an image
  -else 
    =image_tag array[2]
    =f.hidden_field :img_url, value: array[2]
  %p
    =f.label :url
    =f.text_field :url, value: @item.url
  %p
    =f.label :store
    =f.text_field :store, value: array[4]
  %p
    =f.label :name
    =f.text_field :name, value: array[0]
  %p
    =f.label :price
    =f.text_field :price, value: array[1]
  
  %p
    =f.submit "Add to Wishlist"